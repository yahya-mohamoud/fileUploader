<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/fileSkeleton.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">
    <script src="/script.js" defer></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #2b5876, #4e4376);
            color: #fff;
            min-height: 100vh;
        }

        .folders-container {
            max-width: 600px;
            margin: 2rem auto;
        }

        .header {
            text-align: center;
            margin-top: 1rem;
        }

        .folder {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.8rem 1rem;
            margin-bottom: 0.8rem;
            background: rgba(0, 0, 0, 0.4);
            border-radius: 8px;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .folder:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .add-folder {
            justify-content: center;
            background-color: #ffffff00;
        }

        .add-folder:hover {
            box-shadow: initial;
        }

        .addBtn {
            font-size: 2rem;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: rgb(163, 217, 232);
            display: grid;
            place-content: center;
            cursor: pointer;
        }

        .form {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .form form {
            background: rgb(18 43 85 / 88%);
            padding: 2rem;
            border-radius: 12px;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            position: relative;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            animation: fadeIn 0.3s ease;
            border: 1px dashed white;
        }

        .form input,
        .form button {
            padding: 0.7rem;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .form button {
            background: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        .form button:hover {
            background: #45a049;
        }

        .closeBtn {
            position: absolute;
            top: 15px;
            right: 15px;
            cursor: pointer;
        }

        .closeBtn i {
            font-size: 2rem;
            color: #ffffff;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar.ejs' )%>
        <div class="container">

            <!-- <%- include('../partials/loading.ejs' )%> -->
            

            <h1 class="header">All Folders</h1>
                 <div class="folders-container">

                 <div class="skeleton-container">
                     <div class="folder bucket">
                         <div class="skeleton title"></div>
                         <div class="dots skeleton">
                             <span class="dot"></span>
                             <span class="dot"></span>
                             <span class="dot"></span>
                            </div>
                        </div>
                     <div class="folder bucket">
                         <div class="skeleton title"></div>
                         <div class="dots skeleton">
                             <span class="dot"></span>
                             <span class="dot"></span>
                             <span class="dot"></span>
                            </div>
                        </div>
                     <div class="folder bucket">
                         <div class="skeleton title"></div>
                         <div class="dots skeleton">
                             <span class="dot"></span>
                             <span class="dot"></span>
                             <span class="dot"></span>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="folders-container hidden" id="content">
                <% folders.forEach(folder=> { %>
                    <div class="folder" onclick="window.location.href='/folders/details/<%= folder.id %>'">
                        <h2>
                            <%= folder.name %>
                        </h2>
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </div>
                    <% }) %>

                        <div class="folder add-folder">
                            <div class="addBtn"><i class="fa-solid fa-plus"></i></div>
                        </div>
            </div>

            <div class="form">
                <div class="closeBtn"><i class="fa-solid fa-xmark"></i></div>
                <form action="/folders/create" method="POST">
                    <label for="foldername">Create a Folder</label>
                    <input type="text" name="foldername" id="foldername" placeholder="Folder name" required>
                    <button type="submit">Submit</button>
                </form>
            </div>
            </div>


        <script>
            const addBtn = document.querySelector('.addBtn');
            const form = document.querySelector('.form');
            const closeBtn = document.querySelector('.closeBtn');

            addBtn.addEventListener('click', () => {
                form.style.display = 'flex';
            });

            closeBtn.addEventListener('click', () => {
                form.style.display = 'none';
            });
        </script>
</body>

</html>